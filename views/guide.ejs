<%- include("./partials/head") %>
<body>
  <div class="gridConteiner">
    <!-- Navbar/Sidebar with dynamic guide links -->
    <div class="aside">
      <% if (guides.length > 0) { %>
        <% guides.forEach((guide, index) => { %>
          <!-- Link to each guide section -->
          <a href="#guide-<%= index %>">
            <h3><%= guide.titel %></h3>
          </a>
        <% }) %>
      <% } else { %>
        <h3>No guides available yet!</h3>
      <% } %>
    </div>

    <!-- Main content where guides are displayed -->
    <div class="main">
      <% if (guides.length > 0) { %>
        <% guides.forEach((guide, index) => { %>
          <div id="guide-<%= index %>" class="section">
            <h2 class="sectionTitle"><%= guide.titel %></h2>
            <% if (guide.imgFile.length > 0) { %>
              <img src="/uploads/<%= guide.imgFile[0] %>" alt="Guide Image" style="width: 200px;">
            <% } %>
            <p class="sectionText"><%= guide.beskrivelse[0] %></p>
          </div>
        <% }) %>
      <% } else { %>
        <h2>No guides available yet!</h2>
      <% } %>
    </div>
  </div>
</body>
</html>
