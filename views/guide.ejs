<%- include("./partials/head") %>
<body>
    <div class="container">
        <!-- Left-side Navbar -->
        <nav class="navbar idk">
            <h2>Table of Contents</h2>
            <a href="/" id="Tilbake">Tilbake</a>
            <% if (guide.overskrift && Array.isArray(guide.overskrift)) { %>
                <% guide.overskrift.forEach(function(heading, index) { %>
                    <a href="#section<%= index %>"><%= heading %></a>
                <% }) %>
            <% } %>
        </nav>

        <!-- Main Content Area -->
        <main>
            <% if (guide.overskrift && Array.isArray(guide.overskrift)) { %>
                <% guide.overskrift.forEach(function(heading, index) { %>
                    <section class="guide-section" id="section<%= index %>">
                        <h2><%= heading %></h2>
                        <p><%= guide.beskrivelse[index] %></p>
                        <% if (guide.imgFile[index]) { %>
                            <img src="/uploads/<%= guide.imgFile[index] %>" alt="Image for <%= heading %>">
                        <% } %>
                    </section>
                <% }) %>
            <% } %>
        </main>
    </div>
</body>
</html>