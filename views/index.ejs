<%- include("./partials/head") %>
<body>
    <%- include("./partials/nav") %>
    <input type="text" id="inputFelt" placeholder="Skriv noe her">

</div>
<div class="guideBoxDiv">
    <% guides.forEach(function(guide) { %>
        <div class="guideBox">
            <h3><%= guide.titel %></h3>
            <p><%= guide.tag %></p>
            <a href="/guide/<%= guide._id %>">Read more</a>
        </div>
    <% }) %>
</div>

<script>
    const searchInput = document.getElementById('inputFelt');
    searchInput.addEventListener('input', function(e) {
        const query = e.target.value.toLowerCase();
        document.querySelectorAll('.guideBox').forEach(item => {
            const title = item.querySelector('h3').textContent.toLowerCase();
            const tag = item.querySelector('p').textContent.toLowerCase();
            if (title.includes(query) || tag.includes(query)) {
                item.style.display = 'block';
            } else {
                item.style.display = 'none';
            }
        });
    });
</script>

    
</body>
</html>